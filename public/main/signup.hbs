        <h2>Sign Up</h2>

        <input type="text" id="name" name="name" placeholder="Enter name" style="color:#ffffff">

        <div id="nameMessage" class="message"></div>

        {{!-- <input type="text" id="age" name="age" placeholder="Enter age" style="color:#ffffff"> --}}

        {{!-- <div id="ageMessage" class="message"></div> --}}

        <input type="email" id="email" name="email" placeholder="Enter email" style="color:#ffffff">

        <div id="emailMessage" class="message"></div>

        <input type="password" id="password" name="password" placeholder="Create password" style="color:#ffffff">

        <div id="passwordMessage" class="message"></div>

        {{!-- <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Re-enter password" style="color:#ffffff"> --}}
        {{!-- <div id="confirmPasswordMessage" class="message"></div> --}}

       <button type="submit" id="signIn_btn" style="cursor:pointer;" >Sign Up</button>

        <p style="color:#4B0E00">Already have an account?</p>

       <p id="clickableText" style="cursor: pointer; color:#4B0E00; margin-top: 1px;">Sign In</p>

    

