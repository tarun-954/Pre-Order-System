    <script src="/public/index.js"></script>
    <script>
    document.addEventListener("DOMContentLoaded", function() {
    // Event listener for clickable text
    document.getElementById("clickableText").addEventListener("click", function() {
        window.location.href = "/";
    });

    // Event listener for sign in button
    document.getElementById("signIn_btn").addEventListener("click", function() {
        var name = document.getElementById("name").value.trim();
        var age = document.getElementById("age").value.trim();
        var email = document.getElementById("email").value.trim();
        var password = document.getElementById("password").value.trim();
        var confirmPassword = document.getElementById("confirmPassword").value.trim();

        // Function to display message
        function displayMessage(id, message) {
            document.getElementById(id).innerHTML = message;
        }

        // Clear all previous messages
        var messageIds = ["nameMessage", "ageMessage", "emailMessage", "passwordMessage", "confirmPasswordMessage"];
        messageIds.forEach(function(id) {
            displayMessage(id, "");
        });

        // Validate each field and display messages
        if (name === '') {
            displayMessage("nameMessage", 'Please enter your name.');
        }
        if (age === '' || isNaN(age)) {
            displayMessage("ageMessage", 'Please enter a valid age.');
        }
        if (email === '' || !isValidEmail(email)) {
            displayMessage("emailMessage", 'Please enter a valid email address.');
        }
        if (password === '') {
            displayMessage("passwordMessage", 'Please create a password.');
        }
        if (password !== confirmPassword) {
            displayMessage("confirmPasswordMessage", 'Passwords do not match.');
        }

        // If no errors, display success message
        var allMessages = messageIds.map(function(id) {
            return document.getElementById(id).innerHTML;
        });
        if (!allMessages.some(message => message !== "")) {
            displayMessage("confirmPasswordMessage", "Form submitted successfully!");
            // You can add code here to submit the form or perform other actions
        }
    });

    // Function to validate email format
    function isValidEmail(email) {
        var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        return emailRegex.test(email);
    }
});
  
</script>
